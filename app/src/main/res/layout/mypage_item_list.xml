<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mypage_iv_list_sns"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/mypage_icon_insta"
        app:tint="@color/function"
        android:layout_marginStart="8dp"
        />

    <EditText
        android:id="@+id/mypage_et_list_sns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="SNS 아이디"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/mypage_iv_list_sns"
        app:layout_constraintEnd_toStartOf="@id/mypage_iv_list_save"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toEndOf="@id/mypage_iv_list_sns"
        app:layout_constraintTop_toTopOf="@id/mypage_iv_list_sns" />

    <ImageView
        android:id="@+id/mypage_iv_list_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/mypage_iv_list_sns"
        app:layout_constraintBottom_toBottomOf="@id/mypage_iv_list_sns"
        android:padding="8dp"
        android:src="@drawable/mypage_icon_delete"
        app:tint="@color/function"
        />

    <ImageView
        android:id="@+id/mypage_iv_list_save"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toStartOf="@id/mypage_iv_list_delete"
        app:layout_constraintTop_toTopOf="@id/mypage_iv_list_sns"
        app:layout_constraintBottom_toBottomOf="@id/mypage_iv_list_sns"
        android:padding="6dp"
        android:src="@drawable/mypage_baseline_save_24"
        app:tint="@color/function"
        />

</androidx.constraintlayout.widget.ConstraintLayout>