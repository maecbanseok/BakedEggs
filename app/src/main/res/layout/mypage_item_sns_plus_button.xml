<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/mypage_iv_sns_function"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/mypage_icon_minus"
        android:layout_marginEnd="16dp"
        app:tint="@color/function"
        />

    <ImageView
        android:id="@+id/mypage_iv_sns_insta"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/mypage_icon_insta"
        android:layout_marginStart="16dp"
        app:tint="@color/function"
        />

    <ImageView
        android:id="@+id/mypage_iv_sns_github"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/mypage_icon_github"
        android:layout_marginStart="16dp"
        app:tint="@color/function"
        />

    <ImageView
        android:id="@+id/mypage_iv_sns_discord"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/mypage_icon_discord"
        android:layout_marginStart="16dp"
        app:tint="@color/function"
        />

</LinearLayout>