<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/mypage_tv_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="리스트 타이틀"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/mypage_btn_list_title_fold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mypage_baseline_arrow_drop_down_24"
        app:layout_constraintStart_toEndOf="@id/mypage_tv_list_title"
        app:layout_constraintTop_toTopOf="@id/mypage_tv_list_title"
        app:layout_constraintBottom_toBottomOf="@id/mypage_tv_list_title"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>